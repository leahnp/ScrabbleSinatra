<h1>One Word Game</h1>
<section>
	<div class="params">
  <%= params %>
</div>
	<div class="flex-container">
		<fieldset>
		<legend>Play</legend>
			<form action="" method="post" accept-charset="utf-8">
			  <label for="word">Word</label>
			  <input type="text" name="all_words[word]" value="" id="word">

			  <input type="submit" value="Submit">
			  </form>

			  <p><%if @score != nil%>
			  		Score for "<%=@word.word%>": <%=@score%><br>
			  		<form method="post" action="/runMethod">
    					<input type="hidden" name="word_to_score" value="<%=@word.word%>">
    					<input class='btn btn-primary' type='submit' value='Get Score For Each Letter'>
						</form>
			  	<%end%>
						<%if @hash != nil%>

			  		<%array = @hash[:score]%>
			  		<%array.each do |a|%>
			  						<%=a[0]%>:<%=a[1]%><br>
						<%end%>
					<%end%>
			  	</p>
			
		</fieldset>
	</div>
	<div class="flex-container">
		<div class="flex-item" id="tiles">
				<a class="tile_links" href="/score-many">Multi-Word 	Game</a>
			</div>
		</div>
	</div>
</section>